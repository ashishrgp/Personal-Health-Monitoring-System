<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell_pc.health_first.Registration1">

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/buttonsubmit"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textViewfirstname"
        android:layout_toEndOf="@+id/textViewfirstname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:inputType="textPersonName"
        android:ems="10"
        android:maxLength="10"
        android:hint="Phone number"
        android:id="@+id/editTextphonenumber"
        android:width="100dp"
        android:layout_below="@+id/editTextlastname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:ems="10"
        android:hint="Username"
        android:id="@+id/editTextusername"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:maxLength="20"
        android:hint="Last Name"
        android:id="@+id/editTextlastname"
        android:width="100dp"
        android:layout_below="@+id/editTextfirstname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:id="@+id/buttonback"
        android:layout_alignBaseline="@+id/buttonsubmit"
        android:layout_alignBottom="@+id/buttonsubmit"
        android:layout_alignParentEnd="true" />

    <TextView android:text = "Register Here" android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonsubmit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/editTextpassword"
        android:width="100dp"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:layout_below="@+id/editTextusername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:ems="10"
        android:id="@+id/editTextage"
        android:width="100dp"
        android:maxLength="3"
        android:hint="Age"
        android:layout_below="@+id/editTextpassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"

        android:focusable = "true"
        android:textColorHighlight = "#ff7eff15"
        android:textColorHint = "#ffff25e6"
        android:hint="First Name"

        android:id="@+id/editTextfirstname"
        android:width="100dp"
        android:visibility="visible"
        android:layout_below="@+id/editTextage"
        android:layout_alignParentStart="true" />



    <![CDATA[
        android:width="100dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/buttonsubmit"
        android:layout_toEndOf="@+id/buttonsubmit" />
        ]]>


</RelativeLayout>
